{
  "plugins": ["stylelint-scss"],
  "extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
  "rules": {
    "selector-class-pattern": "^[\\w-]+$",
    "scss/dollar-variable-pattern": "^[\\w-]+$",
    "scss/at-mixin-pattern": "^[\\w-]+$",
    "no-descending-specificity": null
  }
}
